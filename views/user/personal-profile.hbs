<div>
    <img id="background-recipes"
        src="https://res.cloudinary.com/dbtmrinwa/image/upload/f_auto,q_auto/mclwnysu101ogudwnvo0" alt="">

    <div class="row justify-content-center text-center">
        <div class="col-5 card text-center m-2 pt-3">
            <h2>{{user.username}} bio:</h2>
            <hr>
            <p class="description">{{user.bio}}</p>
            <div class="row justify-content-between">
                <div class="col-6 text-start ingredients align-self-center">
                    <a href="/user/{{user._id}}/edit" class="d-block button-62 m-2">Edit</a>
                    <a href="/recipes/{{user._id}}" class="d-block button-62 m-2">Own recipes</a>
                    <a href="/recipes/{{user._id}}/favorites" class="d-block button-62 m-2">Favorite recipes</a>
                    {{#if isAdmin}}
                    <a href="/user/list" class="d-block button-62 m-2">View all users</a>
                    {{/if}}
                </div>
                <div class="col-6 align-self-center">
                    <img class='img-responsive w-75' src="{{user.avatar}}" alt="avatar">
                </div>
            </div>
        </div>

    </div>
</div>