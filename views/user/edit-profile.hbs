<img id="background-recipes" src="https://res.cloudinary.com/dbtmrinwa/image/upload/f_auto,q_auto/mclwnysu101ogudwnvo0"
    alt="">
<h2 class="header text-center mt-3">Edit profile</h2>
<div class="row justify-content-center">
    <div class="col-10 mt-3 ">

        <div class="row card justify-content-center text-center">
            <form action="/user/{{_id}}/edit" method="POST" enctype="multipart/form-data">

                <div class="row justify-content-center">
                    <div class="col-7 mb-5 ">

                        <label for="usernameInput" class="form-label fields d-block mt-3">Username</label>
                        <input class="btn btn-light fields w-75 " type="text" id="usernameInput" name="username"
                            value="{{username}}">
                    </div>
                    <div class="col-7 mb-5 ">
                        <label for="emailInput" class="form-label fields d-block">Email adress</label>
                        <input class="btn btn-light fields w-75" type="email" id="emailInput" name="email"
                            value="{{email}}">
                    </div>
                    <div class="col-7 mb-5">
                        <label for="imageInput" class="form-label fields d-block">Choose avatar photo. Leave empty for
                            no
                            changes</label>
                        <input class="btn btn-light form-control form-control-sm fields w-75" id="imageInput"
                            type="file" name="avatar">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-6">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea class="form-control description" id="bio" rows="3" name="bio"
                            placeholder="Insert your bio">{{bio}}</textarea>
                    </div>
                </div>
                {{#if errorMessage}}
                <div class='bg-warning mb-2 text-center' id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
                <button class="button-62 m-3" type="submit">Confirm</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/recipe.js"></script>