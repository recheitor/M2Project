<img id="background-recipes" src="https://res.cloudinary.com/dbtmrinwa/image/upload/f_auto,q_auto/mclwnysu101ogudwnvo0"
    alt="">
<h2 class="header text-center mt-3">Log in</h2>
<div class="row justify-content-center text-center">


    <div class="col-8">
        <div class="row card justify-content-center text-center">

            <form action="/auth/login" method="POST">
                <div class="row justify-content-center">
                    <div class="col-10 mb-5 mt-5 ">
                        <label for="emailInput" class="form-label fields d-block">Email adress</label>
                        <input class="btn btn-light fields w-75" type="email" id="emailInput" name="email"
                            placeholder="Insert email">
                    </div>
                    <div class="col-10 mb-5 ">
                        <label for="pwdInput" class="form-label fields d-block">Password</label>
                        <input class="btn btn-light fields w-75" type="password" id="pwdInput" name="userPwd"
                            placeholder="Password">
                    </div>
                </div>



                {{#if errorMessage}}
                <div class='bg-warning mb-2 text-center' id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
                <button class="button-62 m-3" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/recipe.js"></script>