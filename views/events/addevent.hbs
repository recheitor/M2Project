<h3>Add event</h3>
<hr>
<div class="row">
    <form action="/events/add" method="POST" enctype="multipart/form-data">
        <div class="col-6">
            <label for="title" class="form-label">Name Event</label>
            <input type="text" id="title" name="title">
            <br>
            <label for="icon" class="form-label">Choose photo</label>
            <input class="form-control form-control-sm mb-3" id="formFileSm" type="file" name="icon">
        </div>
        <div class="col-6">
            <label for="date" class="form-label">Date</label>
            <input type="datetime-local" id="date" name="date">
            <br>
        </div>
        <div class="col-6">
            <label for="autolocation" class="form-label">Location</label>
            <input id="autolocation" class="controls" type="text" placeholder="Enter a location" name="address">
        </div>
        <div class="col-6">
            <label for="description" class="form-label"></label>
            <textarea class="form-control" id="description" rows="3" name="description"
                placeholder="Description"></textarea>
        </div>
        <div>
            {{errMessage}}
        </div>
        <button class="btn btn-info mt-3" type="submit">Create</button>
    </form>
</div>

<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD9cparf9WJ2kLOCPmr_4e_NRdstbvHob0&libraries=places&callback=initMap"
    async defer>
    </script>
<script src="/js/autocomplete.js"></script>